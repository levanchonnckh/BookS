
@using BookS.Models
@using PagedList.Mvc;

@model PagedList.PagedList<BookS.Models.SACH>

@helper Truncate(string input, int lenght)
{ 
    if (input.Length<lenght)
    {
        @input
    }else
    {
        @input.Substring(0,lenght)<text>...</text>
    }
}

@{
    ViewBag.Title = "Sach";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Sach</h2>

<p>
    @Html.ActionLink("Thêm mới", "Themsachmoi")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Mota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Anhbia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoLuongTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaCD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNXB)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="col-md-1">
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td class="col-md-3">
            
            @Truncate(item.Mota,150)
        </td>
        <td class="col-md-1">
            
            <img src="@Url.Content("~/image/"+@item.Anhbia)" style="width:100%"/>

            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHU_DE.TenChuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NHA_XUAT_BAN.TenNXB)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Suasach", new { id=item.MaSach }) |
            @Html.ActionLink("Chi tiết", "Chitietsach", new { id=item.MaSach }) |
            @Html.ActionLink("Xóa", "Xoasach", new { id=item.MaSach })
        </td>
    </tr>
}

</table>

@*Tạo liện kết các trang*@

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount;

    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Sach", new { page = page }))
    </div>
    <style>
        .MenuTrang {
            display: inline;
        }
    </style>
