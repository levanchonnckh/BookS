

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Index</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/shop-homepage.css" rel="stylesheet">
    
</head>
<body>
    <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label for="user" class="col-md-4 text-right">
                Email
            </label>
            <input name="email" class="col-md-4" id="text_field" placeholder="nhap email" />
            @ViewData["loi1"]
        </div>
        <div class="form-group">
            <label for="email" class="col-md-4 text-right">
                Password
            </label>
            <input name="password" class="col-md-4" id="text_field" placeholder="Password" type="password" />
            @ViewData["loi2"]
        </div>
        <div class="form-group">
            <div class="col-md-offset-4">
                <div class="checkbox-inline">
                    <input type="checkbox" /> Remember
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>

    }









    <!-- /.container -->
    <!-- jQuery -->
    <script src="/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
