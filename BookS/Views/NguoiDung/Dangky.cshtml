
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style type="text/css">
    td {
        text-align: right;
        padding-right: 20px;
    }
</style>
<div class="container">
    <div class="col-md-6">
        @Html.Action("Dangnhap")
    </div>
    <div class="col-md-6">
        <h2>Đăng ký thành viên</h2>
        <hr />
        <table>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true){
                    <tr style="height:40px;">
                        <td>Họ tên khách hàng:</td>
                        <td>
                            <input type="text" class="form-control" id="inputEmail3" placeholder="example" name="HotenKH">
                        </td>

                    </tr>
                    <tr style="height:40px;">
                        <td>Tên đăng nhập:</td>
                        <td>
                            <input type="text" class="form-control" id="inputEmail3" placeholder="example" name="TenDN">
                        </td>

                    </tr>
                    <tr style="height:40px;">
                        <td>Mật khẩu:</td>
                        <td>
                            <input type="password" class="form-control" id="inputEmail3" placeholder="***********" name="Matkhau">
                        </td>

                    </tr>
                    <tr style="height:40px;">
                        <td>Nhập lại mật khẩu:</td>
                        <td>
                            <input type="password" class="form-control" id="inputEmail3" placeholder="***********" name="Matkhaunhaplai">
                        </td>
                    </tr>
                    <tr style="height:40px;">
                        <td>Điện thoại:</td>
                        <td>
                            <input type="number" class="form-control" id="inputEmail3" placeholder="087798672" name="Dienthoai">
                        </td>
                    </tr>
                    <tr style="height:40px;">
                        <td>Email:</td>
                        <td>
                            <input type="email" class="form-control" id="inputEmail3" placeholder="example@gmail.com" name="Email">
                        </td>
                    </tr>
                    <tr style="height:40px;">
                        <td>Ngày sinh:</td>
                        <td>
                            <input type="date" class="form-control" id="inputEmail3" name="HotenKH">
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            <button type="submit" value="Đăng Ký" class="btn btn-success" style="margin-top:10px">Đăng Ký</button>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>



