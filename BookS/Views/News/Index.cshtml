@using BookS.Models
@using PagedList.Mvc;

@model PagedList.PagedList<SACH>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row">
    @{
        var dem = 0;
        foreach (var i in Model)
        {
            if (dem % 2 == 0)
            {
                //left
                <div class="col-md-12">
                    <div class="col-md-5">
                        <img src="~/image/@i.Anhbia" />
                    </div>
                    <div class="col-md-7 p">
                        <p>@i.Mota</p>
                    </div>
                </div>

            }
            else
            {
                <div class="col-md-12">
                    <div class="col-lg-7 p">
                        <p>@i.Mota</p>
                    </div>
                    <div class="col-md-5">
                        <img src="~/image/@i.Anhbia" />
                    </div>
                </div>

            }
            dem++;
        }
    }


</div>



@*Tạo liện kết các trang*@

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount;

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
    }

    .left {
    }

    .right {
    }

    .p {
        padding-top: 130px;
    }
</style>



