@model BookS.Areas.admin.Models.deviceDetail
@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <h3>@Model.detailD.TenDevice</h3>
    <hr />
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="col-md-1">hình ảnh</th>
                    <th>màu sắc</th>
                    <th>màn hình</th>
                    <th>ram</th>
                    <th>bộ nhớ</th>
                    <th>cpu</th>
                    <th>giá</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var i in Model.sheet)
                {

                    <tr>
                        <td>
                           
                                <a href="@Url.Action("ThemGiohang","Giohang",new { @iMaDevice = @i.MaDev,@MaChiTiet = @i.MaChiTiet,@strURL = Request.Url.ToString()})">Đặt mua</a>
                            
                        </td>
                        <td class="col-md-1"><img src="~/image/DEVICE/@Model.detailD.AnhBia" style="width:100%" /></td>
                        <td>@i.ManHinh</td>
                        <td style="background-color:@i.MauSac"></td>
                        <td>@i.RAM</td>
                        <td style="color:#0026ff">@i.BoNhoTrong</td>
                        <td>@i.CPU</td>
                        
                        <td><h3 style="color:red">Giá: @String.Format("{0:0,0}", @i.Gia_ * 22000) VND</h3></td>
                    </tr>

                }
            </tbody>
            
        </table>
       
    </div>
</div>

