@using BookS.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Giỏ Hàng</h2>
<table align="center" border="1" class="col-md-12">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã sách</td>
        <td>Tên sách</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.iMasach</td>
            <td>@item.sTensach</td>
            <td><img src="~/image/@item.sAnhbia" class="col-md-4"/></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { iMasp = @item.iMasach }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:greenyellow"/>
                </td>
                <td>@String.Format("{0:0,0}", @item.dDongia)</td>
                <td>@String.Format("{0:0,0}", @item.dThanhtien)</td>
                <td><a href="@Url.Action("ChitietSP","Home",new { id = @item.iMasach})">Chi tiết</a></td>
                <td>@Html.ActionLink("Xoa", "XoaGiohang", new { iMasp = @item.iMasach })</td>
                <td><input type="submit" value="cập nhật"/></td>
            }
            
        </tr>
    }
    <tr style="text-align:right;font-weight:bold;color:red">
        <td colspan="3"> Số lượng sách: @ViewBag.Tongsoluong</td>
        <td colspan="3"> Tổng tiền: @String.Format("{0:0,0}",ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="text-align:right;color:blue;font-weight:bold;">
        <td colspan="9">
            @Html.ActionLink("Xóa giỏ hàng","XoaAll")
        </td>
    </tr>

    <tr style="font-weight: bold; color: blue; text-align: center">
        <td colspan="9">
            @Html.ActionLink("Đặt hàng", "Dathang", "Giohang")
        </td>
    </tr>
</table>

