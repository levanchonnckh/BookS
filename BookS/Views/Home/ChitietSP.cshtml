@using BookS.Models
@model List<BookS.Models.CHI_TIET>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

}

<h3>THÔNG TIN CHI TIẾT</h3>
<div id="top" class="col-md-12" style="background-color:#F6F6F6">
    
    <div style="padding-bottom:100px;" class="container">
        @{
            var dem = 0;
            foreach (var i in Model)
            {
                if (dem % 2 == 0)
                {
                    <div style="margin-bottom:50px;" class="col-md-12">
                        <div class="col-md-4" style="padding-top:70px;">
                            <p>@i.DacDiem</p>
                        </div>
                        <div class="col-md-8">
                            <img src="~/image/CHI_TIET/@i.IMG" style="width:100%;height:100%" />
                        </div>
                    </div>

                }
                else
                {
                    <div style="margin-bottom:50px;" class="col-md-12">
                        <div class="col-md-8">
                            <img src="~/image/CHI_TIET/@i.IMG" style="width:100%;height:100%" />
                        </div>
                        <div class="col-md-4" style="padding-top:70px;">
                            <p>@i.DacDiem</p>
                        </div>

                    </div>
                }
                dem++;
            }
        }
    </div>

    <div>

    </div>
</div>

