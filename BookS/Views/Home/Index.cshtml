            <div class="col-md-4 text-center">
                <div>
                    <img src="~/image/DEVICE/@i.AnhBia" style="width:280px;height:280px" />
                </div>
                <div>
                    <h4>@Html.ActionLink(@i.TenDevice, "ChitietSP1", new { id = @i.MaDevice })</h4>
                </div>
            </div>
        }
    }
</div>

