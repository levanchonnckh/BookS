@model BookS.Models.New_Hot
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="padding-top:50px;">
    <h3>Sản phẩm bán chạy nhất</h3>
    <hr />
    @{
        foreach (var i in Model.banChay)
        {
            <div class="col-md-4 text-center">
                <div>
                    <img src="~/image/DEVICE/@i.DEVICE.AnhBia" style="width:280px;height:280px" />
                </div>
                <div>

                    <h4>@Html.ActionLink(@i.DEVICE.TenDevice, "ChitietSP1", new { id = @i.MaDevice })</h4>
                </div>
            </div>
        }
    }
</div>



<div style="margin-top:400px;">

    <h3>Sản phẩm mới nhất</h3>
    <hr />
    @{

        foreach (var i in Model.moi)
